@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Create";
}


<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
@*Acrescenta uma linha*@
<hr />
@*O class= row garante que o div vai acupar a largura da tela:*@
<div class="row">
    @*O bootstrap divide a tela em 12 partes, o cool-4 significa que 1/3 da tela será utilizado
        Se fosse cool-6, seria 1/2:*@
    <div class="cool-4">
        @*Ação que chama o método POST*@
        <form asp-action="Create">
            <div class="form-group">
                @*Define o label que vai aparecer na caixinha para ser digitado:*@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                @*Define o label que vai aparecer na caixinha para ser digitado:*@
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                @*Define o label que vai aparecer na caixinha para ser digitado:*@
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                @*Define o label que vai aparecer na caixinha para ser digitado:*@
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class=" btn btn-default" />
            </div>
            
        </form>

    </div>
</div>
