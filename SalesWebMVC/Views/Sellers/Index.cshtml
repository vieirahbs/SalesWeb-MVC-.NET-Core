@model IEnumerable<SalesWebMVC.Models.Seller>


@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>

@*Objeto table da classe table do bootstrap*@
<table class="table table-striped table-hover">
    @*Cabeçalho da tabela*@
    <thead>
        @*Linha do cabeçalho da tabela*@
        <tr class="success">
            @*Colunas em negrito*@
            <th>
                @*renderiza o nome baseado no nome da classe:*@
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*renderiza o nome baseado no nome da classe:*@
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @*renderiza o nome baseado no nome da classe:*@
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @*renderiza o nome baseado no nome da classe:*@
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    @*Corpo da tabela*@
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @*Colunas*@
            <td>
                @Html.DisplayFor(ModelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(ModelItem => item.BaseSalary)
            </td>
            <td>
                @*Quando um desses links forem clicados, o método do controlador será acionado:*@
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>


</table>